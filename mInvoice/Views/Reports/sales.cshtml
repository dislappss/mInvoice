@using MvcReportViewer;
@using mInvoice.Models;
@using Microsoft.Reporting.WebForms;

@model rp_salesModel 

@{
    ViewBag.Title = @Resources.Resource.sales;    
}

<h2>@Resources.Resource.sales  </h2>

@{
    var settings = new ControlSettings
        {
            ShowParameterPrompts = true,
            ShowToolBar = true,
            ShowFindControls = true,
            //BackColor = System.Drawing.Color.LightBlue ,
            KeepSessionAlive = true,
            //Width = new System.Web.UI.WebControls.Unit("100%"),
            //Height = new System.Web.UI.WebControls.Unit("800px"),
            AsyncRendering = false,
            ShowPrintButton = ViewBag.ShowPrintButton,
            ShowExportControls = ViewBag.ShowPrintButton
        };
}

@Html.MvcReportViewerFluent("Reports/sales.rdlc").ProcessingMode(ProcessingMode.Local).LocalDataSource("labels", Model.labels).LocalDataSource("data", Model.data).Attributes(new { Height = 900, Width = 900, style = "border: none" }).ControlSettings(settings);


