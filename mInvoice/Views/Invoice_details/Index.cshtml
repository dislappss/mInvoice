@model IEnumerable<mInvoice.Models.Invoice_details>

@{
    ViewBag.Title = @Resources.Resource.positions ;
}

<h2>@Resources.Resource.positions</h2>

<p>
    @Html.ActionLink(@Resources.Resource.create_new, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Articles.article_no)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity_2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity_3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price_netto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.discount)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </th>*@
        
        @*<th>
            @Html.DisplayNameFor(model => model.Invoice_header.invoice_no)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Tax_rates.description)
        </th>
        <th>
            @Resources.Resource.edit_delete
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Articles.article_no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity_2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity_3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price_netto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discount)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedAt)
        </td>*@
        
        @*<td>
            @Html.DisplayFor(modelItem => item.Invoice_header.invoice_no)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Tax_rates.description)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = @Resources.Resource.edit}) &nbsp;&nbsp;
           @*@Html.ActionLink("Details", "Details", new { id=item.Id }) &nbsp;*@
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = @Resources.Resource.delete })
        </td>
       
    </tr>
}

</table>
<div class="form-actions no-color">
    @Html.ActionLink(@Resources.Resource.back_to_list, "Index", "Invoice_header", null, new { @class = "btn btn-default" })
    @*@Html.ActionLink(@Resources.Resource.back_to_list, "Index", new { id = Session["invoice_header_id"] })*@
</div>