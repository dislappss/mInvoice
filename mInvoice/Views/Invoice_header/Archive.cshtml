@model IEnumerable<mInvoice.Models.Archive>

@{
    ViewBag.Title = @Resources.Resource.archive;
}

<h2>@Resources.Resource.archive</h2>

    <div class="form-horizontal">
        <h4>@Resources.Resource.optonal_parameters</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })      

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @*@Html.ActionLink(@Resources.Resource.show, "Archive", new { id = item.FileName }, new { @class = "btn btn-default" })*@
                        @Html.ActionLink(@Resources.Resource.show, "Archive", new { @id = item.Id }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }

        </table>
    </div>


<div>
    @Html.ActionLink(@Resources.Resource.back_to_list, "Index", null, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}