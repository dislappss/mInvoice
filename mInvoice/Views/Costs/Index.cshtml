@model IEnumerable<mInvoice.Models.Costs>

<h2>@Resources.Resource.costs</h2>

<p>
    @Html.ActionLink(@Resources.Resource.create_new, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.booking_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.value)
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.Type_of_costs.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Articles.article_no)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customers.customer_no)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.booking_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.value)
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.Type_of_costs.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Articles.article_no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customers.customer_no)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = @Resources.Resource.edit }) &nbsp;&nbsp;
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) &nbsp;*@
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = @Resources.Resource.delete })
        </td>
    </tr>
}

</table>
